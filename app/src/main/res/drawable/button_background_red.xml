<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/red" />
            <stroke
                android:width="@dimen/borde_boton"
                android:color="@color/ruby" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="@dimen/padding_boton"
                android:top="@dimen/padding_boton"
                android:right="@dimen/padding_boton"
                android:bottom="@dimen/padding_boton" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/flame"
                android:endColor="@color/ruby"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/ruby" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="@dimen/padding_boton"
                android:top="@dimen/padding_boton"
                android:right="@dimen/padding_boton"
                android:bottom="@dimen/padding_boton" />
        </shape>
    </item>
</selector>